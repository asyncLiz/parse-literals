{
  "name": "parse-literals",
  "version": "0.0.0",
  "description": "Parse template literals from code",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "Liz Mitchell <asyncliz@gmail.com>",
  "license": "MIT",
  "keywords": [
    "parse",
    "extract",
    "literal",
    "literals",
    "template",
    "tagged",
    "lit-html"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/asyncLiz/parse-literals.git"
  },
  "scripts": {
    "clean": "rimraf \"src/**/*.{js*,d.ts}\" && rimraf \"index.{js*,d.ts}\" && rimraf \"{.nyc_output/,coverage/}\"",
    "prebuild": "npm run clean",
    "build": "tsc",
    "pretest": "npm run clean",
    "test": "nyc mocha -r ts-node/register -r source-map-support/register test/*.ts test/**/*.ts",
    "lint": "prettier --write \"*.{js,ts,json,md}\" \"{src,test}/**/*\"",
    "precommit": "lint-staged",
    "release": "standard-version",
    "prepublishOnly": "npm run build"
  },
  "lint-staged": {
    "*.{js,ts,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "index.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "html",
      "text-summary"
    ],
    "all": true
  },
  "dependencies": {
    "typescript": "^2.9.2"
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/mocha": "^5.2.5",
    "@types/sinon": "^5.0.1",
    "chai": "^4.1.2",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "prettier": "^1.13.7",
    "rimraf": "^2.6.2",
    "sinon": "^6.1.3",
    "source-map-support": "^0.5.6",
    "standard-version": "^4.4.0",
    "ts-node": "^7.0.0"
  }
}
